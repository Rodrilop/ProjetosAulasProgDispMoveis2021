<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="249dp"
            android:layout_height="98dp"
            android:id="@+id/alcoolgasolinaLogo"
            app:srcCompat="@drawable/alcoolgasolina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subtitle"
            android:text="Saiba a melhor opção de abastecimento do seu carro!"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/alcoolgasolinaLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelAlcool"
            android:text="Preço do Álcool. ex: 4.50"
            android:textSize="11dp"
            android:textColor="@color/purple_200"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:layout_constraintStart_toStartOf="@+id/subtitle" android:layout_marginStart="28dp"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/inputAlcool"
            android:inputType="numberDecimal"
            android:textSize="14dp"
            android:textColor="@color/purple_200"
            android:ems="13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelAlcool"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelGasolina"
            android:text="Preço da Gasolina. ex: 5.20"
            android:textSize="11dp"
            android:textColor="@color/purple_200"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/inputAlcool"
            app:layout_constraintStart_toStartOf="@+id/labelAlcool"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/inputGasolina"
            android:inputType="numberDecimal"
            android:textSize="14dp"
            android:textColor="@color/purple_200"
            android:ems="13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelGasolina"/>
    <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/btnCalcular"
            android:text="CALCULAR"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputGasolina"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultado"
            android:textSize="20dp"
            android:textColor="@color/purple_200"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCalcular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="by RodrigoLopes"
            android:textSize="11dp"
            android:textColor="@color/purple_200"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/resultado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>