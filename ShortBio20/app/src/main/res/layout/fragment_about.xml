<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AboutFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B4CCC7">
        <TextView
                android:text="Sobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitleSobre"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="150dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30sp"
        />
        <TextView
                android:text="Analista Técnico de Materiais, envolvendo-me em projetos de saneamento e padronização de cadastros corporativos para diversos segmentos.\n
Utilizo projetos realizados para entender a situação atual e ajudar as empresas a obter um melhor relacionamento com seus cadastros e atingir suas metas de performance.\n
Atualmente estudante de Análise e Desenvolvimento de Sistemas."
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAbout"
                android:textSize="14sp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleSobre"
                android:layout_marginTop="70dp"
                app:layout_constraintVertical_bias="0.095"
                tools:layout_editor_absoluteY="258dp"
                tools:layout_editor_absoluteX="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>