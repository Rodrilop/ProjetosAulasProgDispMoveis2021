<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
            android:layout_height="96dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imgFoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/tarefa">

            </ImageView>
            <TextView
                    android:id="@+id/txtPrioridade"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    tools:text="Média"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescricao"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imgFoto">
            </TextView>
            <TextView
                    android:id="@+id/txtNomeTarefa"
                    android:layout_width="280dp"
                    android:layout_height="20dp"
                    tools:text="Fazer exercício"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imgFoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp">
            </TextView>
            <TextView
                    android:id="@+id/txtDescricao"
                    android:layout_width="280dp"
                    android:layout_height="33dp"
                    tools:text="Necessário praticar mais exercicios "
                    app:layout_constraintTop_toTopOf="@+id/txtNomeTarefa"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imgFoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp">
            </TextView>
            <TextView
                    android:id="@+id/txtPerfil"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    tools:text="Pessoal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtPrioridade"
                    app:layout_constraintHorizontal_bias="0.142"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescricao"
                    android:layout_marginTop="4dp">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>